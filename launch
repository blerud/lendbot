#!/bin/sh -x
sudo kill $(cat lendbot.pid)
echo "exit code $?"
git pull
echo "exit code $?"
git checkout test-fu
echo "exit code $?"
git pull
echo "exit code $?"
ls -l lendbot.pid
cat lendbot.pid
echo "exit code $?"
nohup venv/bin/python3 launcher.py &
echo "exit code $?"
echo "pid: $!"
sudo echo $! > lendbot.pid
echo "exit code $?"
